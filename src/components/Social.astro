---
const { platform, username } = Astro.props;
---

<a href={`https://www.${platform}.com/${username}`} target="_blank">{platform}</a>

<style>
    a {
        padding: 0.5rem;
        color: white;
        font-weight: bold;
        text-decoration: none;
        transition: color 0.3s ease-in-out;
    }

    a:hover {
        color: #ff5d17;
    }
</style>
